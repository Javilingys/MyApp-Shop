
@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row d-flex justify-content-between my-3">
        <header class="h2">Product List</header>
        <button class="btn btn-outline-success">Create new product</button>
    </div>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col" class="p-2">Id</th>
                    <th scope="col" class="p-2 text-uppercase">Product</th>
                    <th scope="col" class="p-2 text-uppercase">Name</th>
                    <th scope="col" class="p-2 text-uppercase">Price</th>
                    <th scope="col" class="p-2 text-uppercase">Edit</th>
                    <th scope="col" class="p-2 text-uppercase">Delete</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th class="align-middle">1</th>
                    <td>
                        <div class="p-2">
                            <img  src="~/images/products/placeholder.png" alt="placeholder" class="img-fluid" style="max-height: 50px" />
                        </div>
                    </td>
                    <td class="align-middle"><h5>Product Name here</h5></td>
                    <td class="align-middle">$180</td>
                    <td class="align-middle"><button class="btn btn-warning">Edit</button></td>
                    <td class="align-middle"><button class="btn btn-danger">Delete</button></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

